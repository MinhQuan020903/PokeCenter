<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Trần Lê Hoàng Lâm"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"

            android:layout_marginHorizontal="10dp"/>
        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0915 203 143"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/number_street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="506 Hùng Vương"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/address_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Phường Thanh Hà, Thành phố Hội An, Quảng Nam"
        android:textSize="16sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/isDeliveryAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery address"
        android:paddingVertical="4dp"
        android:paddingHorizontal="8dp"
        android:textColor="@color/light_secondary"
        android:background="@drawable/lam_background_outline_secondary"/>

</LinearLayout>