<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vender.VenderTab.Home.VenderNotificationActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ninh_notification_function"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive Notifications"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'll give you notifications if any of your parcels are still waiting for you to send them out. In addition, we'll tell you when your waller is empty. Plus, message from buyer also others. You also can choose to off the notifications in the setting."
        android:textColor="@color/grey"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_notify_in_app"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Notify me in app"
        android:textSize="20dp"
        android:background="@drawable/lam_background_ripple_effect_primary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_notify_in_lockscreen"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Notify me in lockscreen"
        android:textSize="20dp"
        android:background="@drawable/lam_background_ripple_effect_primary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>