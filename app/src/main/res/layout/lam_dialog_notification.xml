<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="24dp"
    android:paddingBottom="8dp"
    android:paddingHorizontal="24dp"
    android:orientation="vertical"
    android:background="@drawable/lam_background_white_corner_8"
    android:layout_marginHorizontal="16dp">

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="You get a discount from Baobab Tree store"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Promotion code is ET12A4 \nWish you have a pleasant experience"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/lam_clock_24"
            android:layout_marginEnd="14dp"
            app:tint="#9A9A9A" />

        <TextView
            android:id="@+id/sentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12-05-2023"/>

    </LinearLayout>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>