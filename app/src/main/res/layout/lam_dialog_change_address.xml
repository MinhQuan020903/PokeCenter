<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/lam_background_white_corner_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose address"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/addNewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lam_outline_add_location_alt_24"
            android:backgroundTint="@color/white"
            app:tint="@color/light_secondary" />

    </LinearLayout>



    <ListView
        android:id="@+id/lv_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:divider="#E8E8E8"
        android:dividerHeight="1dp"
        android:maxHeight="200dp"
        android:paddingHorizontal="20dp"
        android:scrollbars="none"
        tools:listitem="@layout/lam_option_list_item" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="OK"
        android:layout_marginBottom="16dp"/>
</LinearLayout>