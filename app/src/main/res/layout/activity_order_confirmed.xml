<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_canvas">


    <ImageView
        android:layout_width="620dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lam_circle_layer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/decor_phone"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:src="@drawable/lam_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/lam_baseline_check_24"
        app:layout_constraintTop_toTopOf="@id/decor_phone"
        app:layout_constraintBottom_toBottomOf="@id/decor_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="480dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Confirmed!"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for your purchase."
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/go_to_orders_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/lam_background_outline_secondary_corner_8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:text="Go to Orders"
        android:textAlignment="center"
        android:textColor="@color/light_secondary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/continue_shopping_button"/>

    <TextView
        android:id="@+id/continue_shopping_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16sp"
        android:background="@drawable/lam_background_raised_secondary_corner_8"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingVertical="12dp"
        android:text="Continue Shopping"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>