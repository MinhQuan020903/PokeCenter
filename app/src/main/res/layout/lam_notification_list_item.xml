<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="top"
    android:paddingVertical="20dp"
    android:foreground="?android:attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        tools:src="@drawable/lam_totoro"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Welcome to PokeCenter"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/red_circle"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/lam_baseline_circle_24"
                app:tint="#FF0000" />

        </LinearLayout>


        <TextView
            android:id="@+id/notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Congratulations on using our application! We are very happy and grateful that you have trusted and chosen to use our product. We are committed to providing you with the best possible experience and are always ready to assist if you have any questions or issues. We hope you will be satisfied with our application and continue to use it in the future. Thank you very much!"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lam_clock_24"
                android:layout_marginEnd="14dp"
                app:tint="#9A9A9A" />

            <TextView
                android:id="@+id/sentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12-05-2023"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>