<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/lam_background_white_corner_8">

    <TextView
        android:id="@+id/dtAdminAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADMIN AUTHENTICATION"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/lam_background_header_dialog"
        android:backgroundTint="@color/quan_bright_red"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/etAdminAuthPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:text=""
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvAdminAuthFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/quan_bright_red"
        android:drawablePadding="4dp"
        android:drawableTint="@color/quan_bright_red"
        android:drawableLeft="@drawable/quan_icon_failed"

        android:text="Password is incorrect."/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/bAuthCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_margin="15dp"
            android:backgroundTint="@color/quan_light_grey"
            android:shadowColor="@color/black"
            android:textColor="@color/black"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/bAuthAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="@color/quan_bright_red"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>